<section class="py-5">
    <div class="container-sm ">
        <div class="fs-4 pb-2 mb-5 border-bottom">
            <form action="" onsubmit="search(); return false;">
                <div class="row">
                    <div class="col">Fundraiser</div>
                    <div class="col-2">
                        <select class="form-select form-select-sm" aria-label="Default select example" id="search-select">
                            <option selected>Select category</option>
                            <option value="1">Name </option>
                            <option value="2">Email</option>
                        </select>
                    </div>
                    <div class="col-3">
                        <div class="form-group">
                            <input type="text" name="" id="search-text" class="form-control">

                        </div>
                    </div>
                    <div class="col-1">
                        <input type="submit" class="btn btn-sm btn-primary" value="Search">
                    </div>
                </div>
            </form>
        </div>


        <!-- table -->
        <div class="card shadow-sm">
            <div class="card-body">
                <table class="table">
                    <thead>
                        <tr>
                            <td>Name</td>
                            <td>Email</td>
                            <td>Is Verified</td>
                            <td>Action</td>
                        </tr>
                    </thead>
                    <tbody>
                        <% data.forEach(async(user)=>{%>
                        <tr>
                            <td><%=user.User_First.replace(/\w/, c => c.toUpperCase()) + " " + user.User_Last.replace(/\w/, c => c.toUpperCase())%></td>
                            <td><%=user.User_Email%></td>
                            <td>
                            <%if(user.Is_Verified == true){%>
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" value=""  checked disabled>
                                </div>
                            <%}else{%>
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" value="" disabled>
                                </div>
                            <%}%>
                            </td>
                            <td>
                                <a href="/users/page?id=<%=user.User_ID%>"
                                    class="btn btn-sm btn-success">View</a>
                            </td>
                        </tr>
                        <%})%>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</section>