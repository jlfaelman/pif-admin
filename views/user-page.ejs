<section class="my-5">
    <div class="container">
        <div class="back my-3">
            <a class="btn" href='/users'>
                &laquo; Back
            </a>
        </div>
        <div class="card shadow-sm">
            <div class="card-body">
                <div class="row">
                    <div class="col">
                        <div class="fs-4">
                            User Information
                        </div>
                    </div>
                </div>
                <!-- User Information -->
                <div class="row">
                    <div class="col">
                        <div class="form-group">
                            <label for="">First Name</label>
                            <input type="text" name="" id="user-first" class="form-control" value="<%=data.user[0].User_First%>" disabled>
                        </div>
                    </div>
                    <div class="col">
                        <div class="form-group">
                            <label for="">Last Name</label>
                            <input type="text" name="" id="user-last" class="form-control" value="<%=data.user[0].User_Last%>" disabled>
                        </div>
                    </div>
                    <div class="col">
                        <div class="form-group">
                            <label for="">Email</label>
                            <input type="text" name="" id="user-email" class="form-control"value="<%=data.user[0].User_Email%>" disabled>
                        </div>
                    </div>
                </div>

                <!-- Fundraiser List -->

                
            </div>
        </div>

        <div class="card my-5">
            <div class="card-body">
                <div class="row">
                    <div class="col">
                        <div class="fs-4">
                            Fundraising List
                        </div>
                    </div>
                </div>
                <div class="row justify-content-evenly">
                    <%if(!fundraisings.length <= 0){%>
                        <%fundraisings.forEach(async(fundraising)=>{%>
                            <div class="col-3">
                                <div class="card border-light shadow-sm" style="width: 18rem;">
                                    <img class="card-img-top" width="250" height="200" src="<%=fundraising.Fundraiser_Image%>" alt="fundraiser_image">
                                    <div class="card-body">
                                        <div class="card-title text-truncate">
                                            <h5><%=fundraising.Fundraiser_Title%></h5>
                                        </div>
                                        <p class="card-subtitle mb-2 text-muted"><span class="mx-2"><%=fundraising.Fundraiser_Type.replace(/\w/, c => c.toUpperCase())%></span> | <span class=" mx-2"><%=fundraising.Fundraiser_Status.replace(/\w/, c => c.toUpperCase())%></span></p>
                                        <p class="card-text text-truncate"><%=fundraising.Fundraiser_Desc%></p>
                                        <a href="/fundraisers/page?id=<%=fundraising.Fundraiser_ID%>" class="btn w-100">View
                                            Fundraiser
                                        </a>
                                    </div>
                                </div>
                            </div>
                            <%})%>
                    <%}else{%>
                        <div class="d-flex flex-row justify-content-center">
                            <div class="fs-4 text-muted mx-auto my-5">
                                No Fundraisers to show
                            </div>
                        </div>                      
                    <%}%>
                    
                </div>
            </div>
        </div>
    </div>
</section>